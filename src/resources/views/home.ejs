<div class="home-body-container">
    <!-- Banner and search -->
    <div class="banner-container" style="background-image: url('img/banner.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 banner-form">
                    <div class="col-xs-12 col-lg-8">
                        <div class="col-xs-12 no-padding hero-form">
                            <div class="col-xs-12 no-padding text-center">
                                <h1 class="hero-heading hero-heading-1">Trải nghiệm kỳ nghỉ tuyệt vời</h1>
                                <h2 class="hero-heading hero-heading-2 hidden-xs">
                                    Thới giới Tours trong tay bạn - Phục vụ tận tâm - Giá ưu đãi
                                </h2>
                            </div>
                        </div>
                        <div class="col-xs-12 hidden-xs" style="height: 50px">&nbsp;</div>
                    </div>
                    <%- include('./partials/searchForm.ejs') %>
                </div>
            </div>
        </div>
    </div>
    <!-- why choose us -->
    <div class="why-container">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <div class="media">
                    <div class="media-left align-middle">
                        <img
                            class=""
                            data-src="/img/icon-support.svg"
                            alt="Tư Vấn Chuyên Nghiệp"
                            src="/img/icon-support.svg"
                        />
                    </div>
                    <div class="media-body align-middle">
                        <p class="media-heading">
                            <b>Tư Vấn Chuyên Nghiệp</b><br />
                            Hỗ trợ nhiệt tình, chăm sóc chu đáo
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="media">
                    <div class="media-left align-middle">
                        <img
                            class=""
                            data-src="/img/icon-location.svg"
                            alt="Trải nghiệm đa dạng"
                            src="/img/icon-location.svg"
                        />
                    </div>
                    <div class="media-body align-middle">
                        <p class="media-heading">
                            <b>Trải Nghiệm Đa Dạng</b><br />
                            Chọn tour phù hợp, giá tour hợp lý
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="media">
                    <div class="media-left align-middle">
                        <img
                            class=""
                            data-src="/img/icon-payment.svg"
                            alt="Thanh Toán An Toàn"
                            src="/img/icon-payment.svg"
                        />
                    </div>
                    <div class="media-body align-middle">
                        <p class="media-heading">
                            <b>Thanh Toán An Toàn</b><br />
                            Linh hoạt, rõ ràng, bảo mật
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Latest Tours -->
    <div class="item-list-container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="item-list__title">Tours du lịch bạn đã xem gần đây</h1>
            </div>
        </div>
        <div class="row gy-5">
            <% if (tours != '') { %> <% tours.latestPlace.forEach((tour, index) => { %>
            <div class="col-xs-12 col-md-4">
                <div class="item">
                    <div class="item__info">
                        <h4><%= tour.price %></h4>
                        <span>/người</span>
                    </div>
                    <img
                        class="card-img-top"
                        style="height: 300px"
                        data-src="<%= tour.img %>"
                        alt="Tour 1"
                        src="<%= tour.imgUrl %>"
                        loading="lazy"
                    />
                    <div class="border-bottom item__content">
                        <div class="item__pre_title">25% Off</div>
                        <h3 class="item__title"><%= tour.name %></h3>
                        <p class="item__desc"><%= tour.desc %></p>
                    </div>
                </div>
            </div>
            <% }) %> <% } %>
        </div>
        <div class="row">
            <div class="col-xs-12 d-flex justify-content-center">
                <a class="btn item-list__view-all" href="#" role="button">Xem thêm</a>
            </div>
        </div>
    </div>
    <!-- Tours -->
    <div class="item-list-container light-bg">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="item-list__title">Tours du lịch miền Trung</h1>
            </div>
        </div>
        <div class="row gy-5">
            <% if (places != '') { %> <% places.forEach((place, index) => { %>
            <div class="col-xs-12 col-md-4">
                <div class="item">
                    <div class="item__info">
                        <h4>5.999.000</h4>
                        <span>/người</span>
                    </div>
                    <img
                        class="card-img-top"
                        style="height: 300px"
                        data-src="<%= place.img %>"
                        alt="Tour 1"
                        src="<%= place.img %>"
                        loading="lazy"
                    />
                    <div class="border-bottom item__content">
                        <div class="item__pre_title">25% Off</div>
                        <h3 class="item__title"><%= place.name %></h3>
                        <p class="item__desc"><%= place.desc %></p>
                    </div>
                </div>
            </div>
            <% }) %> <% } %>
        </div>
        <div class="row">
            <div class="col-xs-12 d-flex justify-content-center">
                <a class="btn item-list__view-all" href="#" role="button">Xem thêm</a>
            </div>
        </div>
    </div>
    <!-- Famous landmark: địa danh nổi tiếng -->
</div>

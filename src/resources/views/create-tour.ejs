<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Create Form</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">dashboard</a></li>
                <li class="breadcrumb-item active text-muted" aria-current="page">create tour</li>
            </ol>
        </nav>
    </div>
    <div classs="col-12" id="alert-container"></div>
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Tour</h4>
                    <form class="upload-form" id="upload-form">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <label for="placeData">Place ID</label>
                            <input type="text" class="form-control" id="placeData" name="placeData" />
                        </div>
                        <div class="form-group">
                            <label for="duration">Duration</label>
                            <input
                                type="text"
                                class="form-control"
                                id="duration"
                                name="duration"
                                placeholder="3 ngày 2 đêm"
                            />
                        </div>
                        <div class="form-group">
                            <label for="dateGo">Date go</label>
                            <input type="text" class="form-control" id="dateGo" name="dateGo" placeholder="24/3/2024" />
                        </div>
                        <div class="form-group">
                            <label for="dateBack">Date back</label>
                            <input
                                type="text"
                                class="form-control"
                                id="dateBack"
                                name="dateBack"
                                placeholder="27/3/2024"
                            />
                        </div>
                        <div class="form-group">
                            <label for="desc">Description</label>
                            <textarea class="form-control" id="desc" name="desc" required rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" id="price" name="price" placeholder="2.300.000" />
                        </div>
                        <div class="form-group">
                            <label for="departure">Departure</label>
                            <input
                                type="text"
                                class="form-control"
                                id="departure"
                                name="departure"
                                placeholder="Hồ Chí Minh"
                            />
                        </div>
                        <div class="form-group">
                            <label for="destination">Destination</label>
                            <input
                                type="text"
                                class="form-control"
                                id="destination"
                                name="destination"
                                placeholder="Hà Nội"
                            />
                        </div>
                        <div class="form-group">
                            <label for="vehicle">Vehicle</label>
                            <input
                                type="text"
                                class="form-control"
                                id="vehicle"
                                name="vehicle"
                                placeholder="xe khách"
                            />
                        </div>

                        <div class="input-group mb-3 custom-file-button">
                            <label class="input-group-text" for="inputGroupFile">Upload Image</label>
                            <input
                                type="file"
                                class="form-control"
                                id="image"
                                name="image"
                                accept="image/*"
                                multiple="multiple"
                            />
                        </div>
                        <button type="button" class="btn btn-primary" onclick="uploadAndAddPlace()">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    async function uploadAndAddPlace() {
        // Lấy thông tin từ biểu mẫu
        const name = document.getElementById('name').value;
        const desc = document.getElementById('desc').value;
        const image = document.getElementById('image').files[0];
        const isFamous = document.getElementById('isFamous').checked;
        const region = document.getElementById('region').value;

        // Tạo FormData để gửi dữ liệu đến server
        const formData = new FormData();
        formData.append('name', name);
        formData.append('desc', desc);
        formData.append('image', image);
        formData.append('isFamous', isFamous);
        formData.append('region', region);

        try {
            // Gửi ảnh lên Cloudinary
            const cloudinaryResponse = await fetch('/api/up/upload', {
                method: 'POST',
                body: formData,
            });
            const cloudinaryData = await cloudinaryResponse.json();

            // Gửi dữ liệu địa điểm lên server
            const placeResponse = await fetch('/api/place/add-place', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name: name,
                    desc: desc,
                    img: cloudinaryData.url, // URL của ảnh từ Cloudinary
                    isFamous: isFamous,
                    region: region,
                }),
            });
            const placeData = await placeResponse.json();
            const alertContainer = document.getElementById('alert-container');
            if (placeData.isupload) {
                alertContainer.innerText = `Error! Failed to create place. Please try again.`;
            } else {
                alertContainer.innerHTML = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> Place created successfully.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <button class="btn btn-primary" onclick="window.location.href='/dashboard'">Back to Dashboard</button>
                    <button class="btn btn-secondary" onclick="window.location.reload()">Continue Adding</button>
                `;
            }
            // Hiển thị thông báo hoặc xử lý kết quả theo ý của bạn
            console.log('Place added successfully:', placeData);
            alert('Place added successfully:');
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to add place:');
        }
    }
</script>

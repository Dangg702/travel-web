<div class="page-title" style="background: no-repeat center/100% url('/img/banner2.jpg'); height: 300px">
    <div class="background-desc">Đặt tour</div>
</div>
<div class="container ps-5 pe-5 mt-5 main-content">
    <div class="row">
        <div class="col-md-8 col-sm-12 col-xs-12">
            <div class="payment-wrap bookingForm">
                <form role="form" method="post" class="form" id="info-form" novalidate="">
                    <div class="no-padding">
                        <div class="title">
                            <h3>SỐ LƯỢNG HÀNH KHÁCH</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-12 no-padding">
                                <div class="form-group">
                                    <label>Người lớn (*)</label>
                                    <input
                                        type="number"
                                        name="numOfPeople"
                                        placeholder=""
                                        value="1"
                                        class="form-control has-value"
                                        required="required"
                                        min="1"
                                        pattern="^\d+$"
                                    />
                                    <span class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-7 col-sm-7 col-xs-12 no-padding"></div>
                        </div>
                    </div>
                    <div class="title">
                        <h3>PHƯƠNG THỨC THANH TOÁN</h3>
                    </div>
                    <p><b style="font-size: 1.4rem">Chọn một trong các phương thức sau:</b></p>
                    <div class="methods">
                        <div class="method" data-payment-type="offline">
                            <input
                                value="1"
                                style="display: none"
                                type="radio"
                                id="pament-method3"
                                data-fee="0"
                                class="payment-method"
                                name="method"
                            />
                            <div class="method-content">
                                <label class="title" toggle="Cash" for="pament-method3">
                                    <h4 style="margin: 0 0 10px">Thanh toán bằng tiền mặt tại văn phòng</h4>
                                    <div class="description">
                                        Quý khách vui lòng đến các văn phòng để thanh toán và nhận vé.
                                    </div>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-check"></i>
                                </label>
                                <div class="content" id="Cash">
                                    <h3 class="mt-2 mb-2">VĂN PHÒNG LỮ HÀNH</h3>

                                    <div class="content">
                                        <strong>Địa chỉ:</strong> 45 Lê Thánh Tôn, phường Bến Nghé, quận 1, TP.HCM<br />
                                        <strong>Điện thoại:</strong> 1900 1808<br />
                                        <strong>Email:</strong>&nbsp;<a href="mailto:info@saigontourist.net"
                                            >info@saigontourist.net</a
                                        ><br />
                                    </div>

                                    <div class="content">&nbsp;</div>

                                    <div class="content">
                                        Quý khách vui lòng đến
                                        <a href="http://www.saigontourist.net/chi-nhanh">các văn phòng Saigontourist</a>
                                        để thanh toán và nhận vé.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="method" data-payment-type="online">
                            <input
                                value="6"
                                style="display: none"
                                type="radio"
                                id="pament-method5"
                                data-fee="0"
                                class="payment-method"
                                name="method"
                            />
                            <div class="method-content">
                                <label class="title" toggle="Momo" for="pament-method5">
                                    <h4 style="margin: 0 0 10px">Thanh toán bằng ví điện tử Momo</h4>
                                    <div class="description" style="display: unset">
                                        Hạn mức tối đa là 20.000.000 VND. Sau khi đặt vé và thanh toán thành công, Chúng
                                        tôi sẽ gửi vé điện tử của Quý khách qua email.
                                    </div>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-check"></i>
                                </label>
                                <div class="content" id="Momo">
                                    <p>Chúng tôi chấp nhận thanh toán bằng Ví điện tử Momo.</p>

                                    <p><b>(*) Hạn mức tối đa là 20.000.000 VND</b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="title">
                            <h3>THÔNG TIN LIÊN HỆ</h3>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Tên (*)</label>
                                    <input
                                        type="text"
                                        name="contact[name]"
                                        placeholder=""
                                        value=""
                                        class="form-control"
                                        required="required"
                                        data-validation="required"
                                    />
                                    <span class="error"></span>
                                </div>
                            </div>
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Số điện thoại (*)</label>
                                    <input
                                        type="text"
                                        name="contact[mobilePhone]"
                                        placeholder=""
                                        value=""
                                        class="form-control"
                                        required="required"
                                        pattern="^(\d{8,})$"
                                        maxlength="15"
                                        data-validation="required custom length"
                                        data-validation-regexp="^(\d{8,})$"
                                        data-validation-length="max15"
                                    />
                                    <span class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Email (*)</label>
                                    <input
                                        type="email"
                                        name="contact[email]"
                                        placeholder=""
                                        value=""
                                        class="form-control"
                                        required="required"
                                        data-validation="required email"
                                    />
                                    <span class="error"></span>
                                </div>
                            </div>
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Địa chỉ (*)</label>
                                    <input
                                        type="text"
                                        name="contact[address]"
                                        placeholder=""
                                        value=""
                                        class="form-control"
                                        required="required"
                                        data-validation="required"
                                    />
                                    <span class="error"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="buttonArea galleryBtnArea">
                            <button href="#" class="btn btn-lg btn-outline-primary w-100" style="height: 40px">
                                Thanh toán
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="bookDetailsInfo">
                <img class="w-100" src="<%= tour.placeData.img %>" alt="image" />
                <div class="infoArea">
                    <h3 class="mb-4">
                        <a target="_blank" href="/api/tour/get-tour/<%= tour.name %>"><%= tour.name%></a>
                    </h3>
                    <ul class="mb-4 list-unstyled">
                        <li><i class="fa fa-barcode me-2" aria-hidden="true"></i>Code: <span><%= tour._id%></span></li>
                        <li>
                            <i class="fa fa-calendar-minus me-2" aria-hidden="true"></i>Ngày đi:
                            <span><%= tour.dateGo %></span>
                        </li>
                        <li>
                            <i class="fa fa-calendar-plus me-2" aria-hidden="true"></i>Ngày về:
                            <span><%= tour.dateBack %></span>
                        </li>
                        <li>
                            <i class="fa fa-calendar me-2" aria-hidden="true"></i>Thời gian:
                            <span><%= tour.duration %></span>
                        </li>
                        <li id="liAdult" class="display-hidden" style="display: list-item">
                            <i class="fa fa-user-secret me-2" aria-hidden="true"></i>Giá:
                            <span><strong>9.979.000</strong> đ</span><span id="adult"> X 1</span>
                        </li>
                        <li id="liExtraServices" class="display-hidden" style="display: none">
                            <i class="fa fa-cart-plus me-2" aria-hidden="true"></i>Dịch vụ cộng thêm :
                            <span><strong id="priceExtraServices">0</strong> đ</span>
                        </li>
                        <li id="liPromotion" class="display-hidden" style="display: none">
                            <i class="fa fa-minus-square me-2" aria-hidden="true"></i>Mã khuyến mãi :
                            <span><strong id="promotionPrice"></strong> đ</span>
                        </li>
                    </ul>
                    <div class="priceTotal">
                        <h2>
                            Tổng: <span id="total-price">9.979.000</span>
                            <span
                                style="
                                    font-size: 16px;
                                    color: #000;
                                    font-weight: 500;
                                    line-height: 21px;
                                    text-transform: lowercase;
                                "
                            >
                                đ</span
                            >
                        </h2>
                    </div>
                    <div id="prepayment-total" class="prepayment-total display-hidden" style="display: none">
                        <div class="prepayment-total-title">Thanh toán</div>
                        <div class="prepayment-total-description">
                            Bạn đã chọn hình thức <strong> Đặt cọc 50%</strong>
                        </div>
                        <div class="prepayment-total-price">
                            Cần thanh toán:
                            <span id="prepayment-total-price" class="price-amount">4.989.500</span>
                            <span class="price-label"> đ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Mã HTML -->
<button id="btnThanhToan" class="btn btn-lg btn-outline-primary w-100" style="height: 40px">
    Thanh toán
</button>

<script>
    // JavaScript để xử lý sự kiện click vào nút "Thanh toán"
    document.getElementById('btnThanhToan').addEventListener('click', async () => {
        try {
            const tourId = '<% tour._id %>'; // Thay đổi cách lấy tourId tùy theo mã EJS của bạn
            const userId = ''; // Thay đổi cách lấy userId tùy theo mã EJS của bạn
            const numOfPeople = document.querySelector('input[name="numOfPeople"]').value;
            const totalPrice = document.getElementById('total-price').innerText;
            const contactName = document.querySelector('input[name="contact[name]"]').value;
            const contactPhone = document.querySelector('input[name="contact[mobilePhone]"]').value;
            const contactEmail = document.querySelector('input[name="contact[email]"]').value;
            const contactAddress = document.querySelector('input[name="contact[address]"]').value;

            // Gửi dữ liệu thanh toán đến server
            const response = await fetch('/api/payment/vnpay', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    tourId,
                    userId,
                    numOfPeople,
                    totalPrice,
                    contact: {
                        name: contactName,
                        mobilePhone: contactPhone,
                        email: contactEmail,
                        address: contactAddress,
                    },
                }),
            });

            // Chuyển hướng người dùng đến trang thanh toán của VNPay
            window.location.href = await response.text();
        } catch (error) {
            console.error('Error occurred during payment:', error);
            // Xử lý lỗi khi gửi dữ liệu đến server
        }
    });
</script>

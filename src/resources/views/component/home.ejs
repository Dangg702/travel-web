
  <%- include('../layout/header'); -%>
  <div class="container" style="margin-top: 50px">
    <div class="row">
  
      <!-- ITEMS -->
      <% for(var i = 0; i < places.length; i++) { %>
      <div class="col-md-3"  >
        <div class="p-1">
          <div class="card">
            <a href="./search/<%= places[i].name %>"><img src="<%= places[i].img %>" class="card-img-top">
              <div class="card-body">
                <h4 class="card-title">Điểm đến: <%= places[i].name %></h4>
                <h4 class="card-title" style="height: 60px;">Vùng:<%= places[i].region %></h4>
              </a>  
            </div>
            <div  style="border:none;margin-left:20px">
              
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div class="row">
      <!-- pagination -->
      <% if(pages > 0) { %>
      <!-- show pagination if there is pages -->
      <nav class="mx-auto">
        <ul class="pagination" style="margin-top: 2rem;">
          <!-- FIRST ITEM -->
          <% if(current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="/">First</a>
          </li>
          <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/">First</a>
          </li>
          <% } %>
          <!-- ITEMS  -->
          <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
          <% if(i !== 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
          <% } %>
          <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
          <% if(i == current) { %>
          <li class="page-item active">
            <a class="page-link" href="/list/<%= i %>/">
              <%= i %>
            </a>
          </li>
          <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/list/<%= i %>/">
              <%= i %>
            </a>
          </li>
          <% } %>
          <% if (i == Number(current) + 2 && i < pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
          <% } %>
          <% } %>
          <!-- LAST ITEM -->
          <% if(current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">
              Last
            </a>
          </li>
          <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/list/<%= pages %>/">
              Last
            </a>
          </li>
          <% } %>
        </ul>
      </nav>
      <% } %>
    </div>
  </div>
  <%- include('../layout/footer'); -%>

  